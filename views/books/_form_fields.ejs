<div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= book.name %>" />
</div>
<div>
    <label for="author">Author</label>
    <select name="author" id="author">
    <% authors.forEach(author => { %>
        <!--  -->
        <option label="<%= author.name  %>" value="<%= author.id %>" <%= book.author === author.id ? 'selected' : '' %>><%= author.name %></option>
    <% }) %>
    </select>
</div>
<div>
    <label for="publishDate">Publish Date</label>
    <input type="date" name="publishDate" id="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T') %>" />
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount  %>" />
</div>
<!-- add to this for file input -->
<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" id="cover" />
</div>
<div>
    <label for="description">Description</label>
    <textarea type="text" name="description" id="description"><%+ book.description  %></textarea>
</div>
